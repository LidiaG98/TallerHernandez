<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TallerHernandez</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark b border-bottom box-shadow mb-3" style="background-color: #2e2d2d !important;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TallerHernandez</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="true" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse d-sm-inline-flex flex-sm-row-reverse collapse show" style=" ">
                    
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Clientes" asp-action="">Cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Empleadoes" asp-action="">Empleados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Automovils" asp-action="">Automovil</a>
                        </li>                       
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Recepcions" asp-action="">Recepciones</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown">Configuración</a>
                            <div class="dropdown-menu">
                                <a class="nav-link " asp-area="" asp-controller="ModoPagoes" asp-action="">Pagos</a>
                                <a class="nav-link " asp-area="" asp-controller="Rols" asp-action="">Puestos</a>
                                <a class="nav-link " asp-area="" asp-controller="Areas" asp-action="">Areas</a>
                                <a class="nav-link " asp-area="" asp-controller="Mantenimiento" asp-action="">Mantenimientos</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Home/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - TallerHernandez - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Cliente.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
