@model TallerHernandez.Areas.Cliente.Models.Cliente
@{
    ViewData["Title"] = "Actualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Cliente</h1>
<h5>Modifique el campo que desea cambiar</h5>
<hr />
<form asp-action="Actualizar" enctype="multipart/form-data">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="image.nombreImagen" />  
    <div class="row">
        <div class="col-12 superRedondo" style="background-color:#fff">
            <div class="row">
                <div class="col-md-6 col-sm-12 pt-4 pl-4 pr-4 pb-3">
                    @*<div class="text-center"><h3>Registrar Empleado</h3></div>*@
                    <div class="text-center pt-4">
                        @if (Model.image.nombreImagen == "")
                        {
                            <img class="rounded-circle" src="/images/user.png" alt="usuario" style="width:75%;height:70%" id="file-preview-zone" />
                        }
                        else
                        {
                            <img class="rounded-circle" src="@("~/uploads/"+Model.image.nombreImagen)" asp-append-version="true"
                                 alt="usuario" style="width:65%;height:60%" id="file-preview-zone" />
                        }
                    </div>
                    <div class="caption text-center mb-4">
                        <label class="btn btn-primary btn-block" for="files">Subir Fotografía</label>
                        <input asp-for="image.imageFile" accept="image/*" type="file" class="btn btn-info hide" id="files" />
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="nombre" class="control-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" placeholder="Nombre del empleado" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="apellido" class="control-label">Apellido</label>
                        <input asp-for="apellido" class="form-control" placeholder="Apellido del empleado" />
                        <span asp-validation-for="apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 superRedondo pt-4 pl-4 pr-4 pb-3" style="background-color:#a6a6a6">
                    <div class="text-center mb-4"><h3>Datos personales</h3></div>
                    <div class="form-group">
                        <label asp-for="dui" class="control-label">DUI</label>
                        <input asp-for="dui" class="form-control" placeholder="Documento de identidad (DUI)" />
                        <span asp-validation-for="dui" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="correo" class="control-label">Correo</label>
                        <input asp-for="correo" class="form-control" placeholder="ejemplo@mail.com" />
                        <span asp-validation-for="correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="telefono" class="control-label">Teléfono</label>
                        <input asp-for="telefono" class="form-control" placeholder="########" />
                        <span asp-validation-for="telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Actualizar Cliente" class="btn btn-success btn-block" />
                    </div>
                    <div>
                        <a class="btn btn-danger btn-block" asp-action="Index">Cancelar</a>
                    </div>
                </div>
            </div>

        </div>


    </div>
</form>

<script type="text/javascript" src="/js/previewImagen.js">
</script>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
