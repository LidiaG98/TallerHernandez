@model TallerHernandez.Areas.Cliente.Models.Cliente
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>¿Estás seguro de eliminar al siguiente cliente?</h1>
<div class="row">
    <div class="col-10">
        <table class="table table-striped table-bordered">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.dui)
                </td>
                <td>
                    @Html.DisplayFor(model => model.dui)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.nombre)
                </td>
                <td>
                    @Html.DisplayFor(model => model.nombre)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.apellido)
                </td>
                <td>
                    @Html.DisplayFor(model => model.apellido)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.telefono)
                </td>
                <td>
                    @Html.DisplayFor(model => model.telefono)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.correo)
                </td>
                <td>
                    @Html.DisplayFor(model => model.correo)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.puntaje)
                </td>
                <td>
                    @Html.DisplayFor(model => model.puntaje)
                </td>
            </tr>
        </table>
    </div>    
    <div class="col-2">
        <form asp-action="Eliminar">
            <input type="hidden" asp-for="ID"/>
            <input type="submit" value="Eliminar" class="btn btn-block btn-danger">
            <a asp-action="Index" class="btn btn-block btn-warning">Cancelar</a>
        </form>
    </div>
</div>

