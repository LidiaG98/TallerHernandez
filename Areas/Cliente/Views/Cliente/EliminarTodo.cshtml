@model TallerHernandez.Areas.Cliente.Models.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">¿Estás seguro de eliminar al siguiente cliente?</h1>
<br />
<div class="row justify-content-center">
    <div class="card border-danger">
        <div class="card-header border-danger bg-danger">
            <h3 class="text-light  rounded text-center card-title">Este cliente tiene Vehículos asignados a este, por lo que no puede eliminarse, a menos que borre todos los vehículos</h3>
        </div>
        <div class="card-body">

            @*<p class="card-text">DUI: @Html.DisplayFor(model => model.dui)</p>
        <p class="card-text">Nombre: @Html.DisplayFor(model => model.nombre)</p>
        <p class="card-text">Apellido: @Html.DisplayFor(model => model.apellido)</p>
        <p class="card-text">Correo: @Html.DisplayFor(model => model.correo)</p>
        <p class="card-text">Teléfono: @Html.DisplayFor(model => model.telefono)</p>
        <p class="card-text">Puntaje: @Html.DisplayFor(model => model.puntaje)</p>*@

            <table class="table table-striped table-bordered">
                <tr>
                    <td>
                        DUI
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.dui)
                    </td>
                </tr>
                <tr>
                    <td>
                        Nombre
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.nombre)
                    </td>
                </tr>
                <tr>
                    <td>
                        Apellido
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.apellido)
                    </td>
                </tr>
                <tr>
                    <td>
                        Teléfono
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.telefono)
                    </td>
                </tr>
                <tr>
                    <td>
                        Correo
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.correo)
                    </td>
                </tr>
                <tr>
                    <td>
                        Puntaje
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.puntaje)
                    </td>
                </tr>
            </table>
        </div>
            <div class="card-footer">
                <h2 class="text-center">¿Desea Continuar?</h2>
                <br />
                <form asp-action="EliminarTodo">
                    <input type="hidden" asp-for="ID" />
                    <input type="hidden" asp-for="nombre" />
                    <input type="hidden" asp-for="apellido" />
                    <input type="hidden" asp-for="dui" />
                    <input type="hidden" asp-for="telefono" />
                    <input type="hidden" asp-for="correo" />
                    <input type="hidden" asp-for="image.nombreImagen" />
                    <input type="submit" value="Eliminar" class="btn btn-block btn-danger card-link">
                </form>
                <a asp-action="Index" class="btn btn-block btn-secondary card-link">Cancelar</a>
            </div>                    
    </div>
