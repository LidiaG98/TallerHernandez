@model TallerHernandez.Areas.Empleado.Controllers.ViewModel
@{
    ViewData["Title"] = "Empleado";
    List<TallerHernandez.Areas.Empleado.Models.AreaViewModel> areas = 
        (List<TallerHernandez.Areas.Empleado.Models.AreaViewModel>)ViewBag.items;
    List<TallerHernandez.Areas.Empleado.Models.MPagoViewModel> pago =
        (List<TallerHernandez.Areas.Empleado.Models.MPagoViewModel>)ViewBag.pagos;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;" />
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1 class="mb-3">Empleado</h1>
        <p>
            <a class="btn btn-outline-primary font-weight-bold rounded-pill" asp-area="Empleado" asp-controller="Empleado" asp-action="Create"> Crear nuevo </a>
        </p>
        <form asp-action="Busqueda" class="form-inline">
            <input asp-for="E.nombre" type="text" class="col-md-7 col-sm-12 mr-sm-2 mb-2" placeholder="Ingrese el nombre del empleado a buscar" />
            <input type="submit" class="col-md-2 col-sm-12 btn btn-block btn-primary rounded-pill mb-2" value="Buscar" />
        </form>
    </div>
</div>

<table class="table table-striped table-responsive text-center">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.E.idEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.idArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.idModo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.dui)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E.correo)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (TallerHernandez.Areas.Empleado.Models.Empleado emp in Model.Empleados)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => emp.idEmpleado)
                </td>
                <td>
                    @foreach (TallerHernandez.Areas.Empleado.Models.AreaViewModel a in areas)
                    {
                        if (a.idArea == emp.idArea)
                        {
                            @Html.DisplayFor(modelItem => a.nombreArea)
                        }
                    }
                </td>
                <td>
                    @foreach (TallerHernandez.Areas.Empleado.Models.MPagoViewModel mp in pago)
                    {
                        if (mp.idModo == emp.idModo)
                        {
                            @Html.DisplayFor(modelItem => mp.tipoPago)
                        }
                    }                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.dui)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.correo)
                </td>
                <td>
                    <a class="btn btn-light" asp-area="Empleado" asp-controller="Empleado" asp-action="Edit" asp-route-id="@emp.idEmpleado">Editar</a>
                    <a class="btn btn-danger" asp-area="Empleado" asp-controller="Empleado" asp-action="Delete" asp-route-id="@emp.idEmpleado">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

