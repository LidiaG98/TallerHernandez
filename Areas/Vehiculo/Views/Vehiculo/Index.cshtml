@model TallerHernandez.Areas.Vehiculo.Controllers.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;" />
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1 class="mb-3">Vehiculos</h1>
        <p>
            <a asp-area="Vehiculo" asp-controller="Vehiculo" asp-action="Insertar" class="btn btn-outline-primary font-weight-bold rounded-pill">Crear Vehiculo</a>
        </p>        
            <form asp-action="Busqueda" class="form-inline">
                <input asp-for="v.placa" type="text" placeholder="Ingrese la placa del vehiculo" class="col-md-7 col-sm-12 mr-sm-2 mb-2"/>
                <input type="submit" class="col-md-2 col-sm-12 btn btn-block btn-primary rounded-pill mb-2" value="Buscar" />
            </form>        
    </div>
</div>
<table class="table table-striped table-responsive">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                Placa
            </th>
            <th>
                Dueño
            </th>
            <th>
                Marca
            </th>
            <th>
                Modelo
            </th>
            <th>
                Año
            </th>
            <th>
                Estado
            </th>
            <th>
                Procedimiento
            </th>
            <th>
                Comentario
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (TallerHernandez.Areas.Vehiculo.Models.Vehiculo vehiculo in Model.Vehiculos)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => vehiculo.placa)
            </td>
            <td>
                @foreach (TallerHernandez.Areas.Cliente.Models.Cliente cliente in Model.cliente)
                {
                    @if (vehiculo.idcliente == cliente.ID)
                    {
                        @Html.DisplayFor(modelItem => cliente.nombre)<span>&nbsp;</span>
                        @Html.DisplayFor(modelItem => cliente.apellido)
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => vehiculo.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => vehiculo.modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => vehiculo.ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => vehiculo.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => vehiculo.procedimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => vehiculo.comentario)
            </td>
            <td>
                <a asp-area="Vehiculo" asp-controller="Vehiculo" asp-action="Actualizar" asp-route-placa="@vehiculo.placa" class="btn btn-light btn-block">Editar</a>
                <a asp-area="Vehiculo" asp-controller="Vehiculo" asp-action="Eliminar" asp-route-placa="@vehiculo.placa" class="btn btn-danger btn-block">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>


