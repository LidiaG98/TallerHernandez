@model TallerHernandez.Areas.Vehiculo.Models.Vehiculo
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>¿Estás seguro de eliminar al siguiente cliente?</h1>
<div class="row">
    <div class="col-10">
        <table class="table table-striped table-bordered">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.placa)
                </td>
                <td>
                    @Html.DisplayFor(model => model.placa)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.marca)
                </td>
                <td>
                    @Html.DisplayFor(model => model.marca)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.modelo)
                </td>
                <td>
                    @Html.DisplayFor(model => model.modelo)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ano)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ano)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.estado)
                </td>
                <td>
                    @Html.DisplayFor(model => model.estado)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.procedimiento)
                </td>
                <td>
                    @Html.DisplayFor(model => model.procedimiento)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.comentario)
                </td>
                <td>
                    @Html.DisplayFor(model => model.comentario)
                </td>
            </tr>
        </table>
    </div>
    <div class="col-2">
        <form asp-action="Eliminar">
            <input type="hidden" asp-for="placa" />
            <input type="submit" value="Eliminar" class="btn btn-block btn-danger">
            <a asp-action="Index" class="btn btn-block btn-warning">Cancelar</a>
        </form>
    </div>
</div>

