@model TallerHernandez.Models.Automovil

@{
    ViewData["Title"] = "Create";
}


<h1>Agregar</h1>

<h4>Automovil</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4 bg-white shadow" style="z-index:4;">
            <div class="text-center pt-4" style="margin-right:30%;">
                <img class="rounded-circle align-self-center" src="/images/automobile1.jpg" alt="usuario" width="200" height="200" id="file-preview-zone" />
            </div>
            <div class="caption text-center mb-4 mt-2">
                <label class="btn btn-primary btn-block" for="files">Subir Fotografía</label>
                <input asp-for="imagen.imageFile" accept="image/*" type="file" class="btn btn-info" id="files"  hidden/>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="automovilID" class="control-label"></label>
                <input asp-for="automovilID" class="form-control" />
                <span asp-validation-for="automovilID" class="text-danger"></span>
                @if (@ViewData["id"].ToString() == "verdad")
                {
                    <span class="text-danger">Este automovil ya está registrado</span>
                    }
                
            </div>
         
        </div>
        <div class="col-md-8 bg-white">
            <div class="form-group">
                <label asp-for="marca" class="control-label"></label>
                <input asp-for="marca" class="form-control" />
                <span asp-validation-for="marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="anio" class="control-label"></label>
                <input asp-for="anio" class="form-control" />
                <span asp-validation-for="anio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="proceso" class="control-label"></label>
                <input asp-for="proceso" class="form-control" />
                <span asp-validation-for="proceso" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="estado" /> @Html.DisplayNameFor(model => model.estado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="comentario" class="control-label"></label>
                <input asp-for="comentario" class="form-control" />
                <span asp-validation-for="comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clienteID" class="control-label"></label>
                <select asp-for="clienteID" class="form-control chosen-s" id="prueba" asp-items="ViewBag.clienteID"></select>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>

        </div>

    </div>
</form>




@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
