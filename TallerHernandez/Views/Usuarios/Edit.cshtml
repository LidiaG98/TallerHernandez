@model TallerHernandez.ViewModels.EditUsuarioViewModel

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex align-items-center justify-content-center mt-5">
    <div class="row justify-content-center h-100">
        <div class="card text-center">
            <div class="card-header" style="width: 30rem;">
                <h3>Editar Usuario</h3>
            </div>
            <div class="card-body">
                <form method="post" class="mt-3">
                    <input asp-for="EmailAntiguo" class="form-control" type="hidden">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Id" disabled class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="UserName" class="col-sm-3 col-form-label">Username</label>
                        <div class="col-sm-9">
                            <input asp-for="UserName" class="form-control">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <input type="submit" value="Actualizar" class="btn btn-success btn-block" />
                    </div>

                </form>
            </div>
            <div class="card-footer text-muted">
                <a asp-action="Index" class="btn btn-block btn-primary">Back to List</a>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card text-center" style="width: 30rem;">
            <div class="card-header">
                <h3>Roles Asignados</h3>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    @foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Ningún rol asignado</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id"
                   class="btn btn-primary btn-block">
                    Cambiar Roles
                </a>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
