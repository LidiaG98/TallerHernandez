@model IEnumerable<TallerHernandez.Models.Rol>

@{
    ViewData["Title"] = "Index";
}
<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;">
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1 class="mb-3">Clientes</h1>
        <p>
            <a class="btn btn-outline-primary font-weight-bold rounded-pill" asp-action="Create">Agregar Puesto</a>
        </p>

        <form class="form-inline" asp-action="Index" method="get">
            <input class="col-md-7 col-sm-12 mr-sm-2 mb-2" type="text" placeholder="ingresa el nombre del puesto" data-val="true" data-val-required="The nombre field is required." id="Buscar" name="Buscar" value="@ViewData["Filtro"]">
            <input type="submit" class="col-md-2 col-sm-12 btn btn-block btn-primary rounded-pill mb-2" value="Buscar">
            <input name="__RequestVerificationToken" type="hidden">
            <a asp-action="Index">Todos los registros</a>
        </form>

    </div>
</div>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["OrdenNom"]">        @Html.DisplayNameFor(model => model.rolNom)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="thead-dark text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td >
                    @Html.DisplayFor(modelItem => item.rolNom)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.rolID" class="btn btn-light btn-block">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.rolID" class="btn btn-info btn-block">Detalle</a> 
                    <a asp-action="Delete" asp-route-id="@item.rolID" class="btn btn-danger btn-block">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
