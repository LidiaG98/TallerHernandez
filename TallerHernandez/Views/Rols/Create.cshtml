@model TallerHernandez.Models.Rol

@{
    ViewData["Title"] = "Create";
}

<div class="row align-items-center justify-content-center">
    <div class="card text-center">
        <div class="card-header">
            Crear un nuevo rol
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="rolNom" class="control-label"></label>
                    <input asp-for="rolNom" class="form-control" />
                    <span asp-validation-for="rolNom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
        <div class="card-footer text-muted">
            <a asp-action="Index" class="btn btn-block btn-primary" >Back to List</a>        
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
