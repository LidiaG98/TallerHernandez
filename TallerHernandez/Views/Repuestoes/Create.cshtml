@model TallerHernandez.Models.Repuesto

@{
    ViewData["Title"] = "Agregar Repuesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregar Repuesto</h1>
<hr />
<div class="mb-3">
    <a class="btn btn-outline-dark font-weight-bold rounded-pill" asp-action="Index">Regresar</a>
</div>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="nombre" class="control-label"></label>
            <input asp-for="nombre" class="form-control" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="categoria" class="control-label"></label>
            <input asp-for="categoria" class="form-control" />
            <span asp-validation-for="categoria" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="anio" class="control-label"></label>
        <input asp-for="anio" class="form-control" min="0" />
        <span asp-validation-for="anio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="cantidad" class="control-label"></label>
        <input asp-for="cantidad" class="form-control" min="0" />
        <span asp-validation-for="cantidad" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="tipo" class="control-label"></label>
            <input asp-for="tipo" class="form-control" />
            <span asp-validation-for="tipo" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="estadorespuesto" class="control-label"></label>
            <input asp-for="estadorespuesto" class="form-control" />
            <span asp-validation-for="estadorespuesto" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>   