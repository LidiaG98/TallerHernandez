@model TallerHernandez.Models.Repuesto

@{
    ViewData["Title"] = "Eliminar Repuesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Repuesto</h1>
<hr />
<div class="mb-3">
    <a class="btn btn-outline-dark font-weight-bold rounded-pill" asp-action="Index">Regresar</a>
</div>
<h3>¿Esta seguro de borrar este repuesto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.anio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.anio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estadorespuesto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estadorespuesto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="repuestoID" />
        <input type="submit" value="Borrar" class="btn btn-danger"> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>