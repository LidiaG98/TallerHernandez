@model IEnumerable<TallerHernandez.Models.Repuesto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;">
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1 class="mb-3">Repuesto</h1>
        <p>
            <a class="btn btn-outline-primary font-weight-bold rounded-pill" asp-action="Create">Agregar Repuesto</a>
        </p>

        <form class="form-inline" asp-action="Index" method="get">
            <input class="col-md-7 col-sm-12 mr-sm-2 mb-2" type="text" placeholder="Ingrese el nombre del repuesto a buscar" data-val="true" data-val-required="The nombre field is required." id="Buscar" name="Buscar" value="@ViewData["Filtro"]">
            <input type="submit" class="col-md-2 col-sm-12 btn btn-block btn-primary rounded-pill mb-2" value="Buscar">
            <input name="__RequestVerificationToken" type="hidden">
            <a asp-action="Index">Todos los registros</a>
        </form>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["OrdenNom"]">@Html.DisplayNameFor(model => model.nombre)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["OrdenAp"]">@Html.DisplayNameFor(model => model.categoria)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.anio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["Ordentipo"]">@Html.DisplayNameFor(model => model.tipo)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estadorespuesto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.anio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estadorespuesto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.repuestoID" class="p-2" style="color:#e2df37;"><i class="far fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.repuestoID" class="p-2" style="color:#1985a8;"><i class="fas fa-info-circle"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.repuestoID" class="p-2" style="color:#ff0000;"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
