@model TallerHernandez.Models.Repuesto

@{
    ViewData["Title"] = "Detalles del Repuesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles del Repuesto</h1>
<hr />
<div class="mb-3">
    <a class="btn btn-outline-dark font-weight-bold rounded-pill" asp-action="Index">Regresar</a>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.anio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.anio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estadorespuesto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estadorespuesto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.repuestoID" class="btn btn-primary">Editar Repuesto</a> |
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
