@model TallerHernandez.Models.Area

@{
    ViewData["Title"] = "Edit";
}


<h1>Editar</h1>

<h4>Area</h4>
<a asp-action="Index" class="btn btn-secondary">Regresar</a>

<hr />


<div class="row  justify-content-center align-items-center ">
    <div class="col-sm-4 bg-white">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="AreaID" class="form-control" type="hidden" />
                <label asp-for="areaNom" class="control-label"></label>
                <input asp-for="areaNom" class="form-control" />
                <span asp-validation-for="areaNom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>
<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
