@model IEnumerable<TallerHernandez.Models.Area>

@{
    ViewData["Title"] = "Index";
}

<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;">
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1 class="mb-3">Areas</h1>

        <p>
            <a class="btn btn-outline-dark font-weight-bold rounded-pill" asp-action="Create">Crear Area</a>
        </p>
        <form class="form-inline" asp-action="Index" method="get">
            <div class="input-group mb-3 col-10 pl-0">
                <input class="form-control" type="text" placeholder="Ingrese el nombre del Area a busar" data-val="true" data-val-required="Ingrese un valor." id="Buscar" name="Buscar" value="@ViewData["Filtro"]">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-dark" value="Buscar"><i class="fas fa-search"></i></button>
                    <a class="btn btn-outline-dark" asp-action="Index"><i class="fas fa-redo-alt text-danger"></i></a>
                </div>
            </div>
        </form>

    </div>
</div>


<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["OrdenNom"]">@Html.DisplayNameFor(model => model.areaNom)</a>
            </th>
            <th>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ordenar Por:
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-action="Index" asp-route-OrdenA="@ViewData["OrdenNom"]">@Html.DisplayNameFor(model => model.areaNom)</a>

                    </div>
                </div>
            </th>
        </tr>
    </thead>
    <tbody class="thead-dark text-center">
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.areaNom)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AreaID" class="btn btn-warning btn-circle"><i class="fas fa-pen" aria-hidden="true" style="color:black"></i></a>

                    <a data-target="#EliminarA" data-toggle="modal" onclick="VeniteArea('@item.AreaID','/Areas/VeniteArea')" class="p-2" style="color:#ff0000;"><i class="far fa-trash-alt btn btn-danger btn-circle" style="color:black"></i></a>
                </td>
            </tr>

        }
    </tbody>
</table>
<div class="modal" tabindex="-1" role="dialog" id="EliminarA">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Desea Eliminar esta Area ?</p>
                <p id="ahMeVengo"></p>
                <input type="hidden" name="AreaID" id="AreaID">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="EliminarArea('Areas/EliminarArea')">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
