@model IEnumerable<TallerHernandez.Models.ModoPago>

@{
    ViewData["Title"] = "Index";
}

<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;">
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1 class="mb-3">Formas de pago</h1>


        <p>
            <a class="btn btn-outline-dark font-weight-bold rounded-pill" asp-action="Create">Nueva Forma</a>
        </p>
        <form class="form-inline" asp-action="Index" method="get">
            <div class="input-group mb-3 col-10 pl-0">
                <input class="form-control" type="text" placeholder="ingresa el tipo de pago" data-val="true" data-val-required="Ingrese un valor." id="Buscar" name="Buscar" value="@ViewData["Filtro"]">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-dark" value="Buscar"><i class="fas fa-search"></i></button>
                    <a class="btn btn-outline-dark" asp-action="Index"><i class="fas fa-redo-alt text-danger"></i></a>
                </div>
            </div>
        </form>

    </div>
</div>


<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["OrdenNom"]"> @Html.DisplayNameFor(model => model.tipo)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="thead-dark text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.modopagoID" class="btn btn-warning btn-circle"><i class="fas fa-pen" aria-hidden="true" style="color:black"></i></a>

                    <a asp-action="Delete" asp-route-id="@item.modopagoID" class="p-2" style="color:#ff0000;"><i class="far fa-trash-alt btn btn-danger btn-circle" style="color:black"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
