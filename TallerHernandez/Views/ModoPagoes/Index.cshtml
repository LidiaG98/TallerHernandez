@model IEnumerable<TallerHernandez.Models.ModoPago>

@{
    ViewData["Title"] = "Index";
}

    <div class="row align">
        <div class="col-md-3 col-sm-12">
            <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;">
        </div>
        <div class="col-md-9 col-sm-12 mb-5">
            <h1 class="mb-3">Formas de pago</h1>
            <p>
                <a class="btn btn-outline-primary font-weight-bold rounded-pill" asp-action="Create">Agregar Pago</a>
            </p>

            <form class="form-inline" asp-action="Index" method="get">
                <input class="col-md-7 col-sm-12 mr-sm-2 mb-2" type="text" placeholder="ingresa el tipo de pago" data-val="true" data-val-required="The nombre field is required." id="Buscar" name="Buscar" value="@ViewData["Filtro"]">
                <input type="submit" class="col-md-2 col-sm-12 btn btn-block btn-primary rounded-pill mb-2" value="Buscar">
                <input name="__RequestVerificationToken" type="hidden">
                <a asp-action="Index">Todos los registros</a>
            </form>

        </div>
    </div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["OrdenNom"]"> @Html.DisplayNameFor(model => model.tipo)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="thead-dark text-center">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.modopagoID" class="p-2" style="color:#e2df37;"><i class="far fa-edit"></i></a>
               
             <a asp-action="Delete" asp-route-id="@item.modopagoID" class="p-2" style="color:#ff0000;"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
