@model IEnumerable<TallerHernandez.Models.Automovil>

@{
    ViewData["Title"] = "Seleccione un vehículo";
}

<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;">
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1 class="mb-3">Automóviles</h1>
        <p>
            <a class="btn btn-outline-primary font-weight-bold rounded-pill" asp-action="Create">Nuevo Auto</a>
        </p>

        <form class="form-inline" asp-action="Index" method="get">
            <input class="col-md-7 col-sm-12 mr-sm-2 mb-2" type="text" placeholder="ingresa una placa o marca" data-val="true" data-val-required="The nombre field is required." id="Buscar" name="Buscar" value="@ViewData["Filtro"]">
            <input type="submit" class="col-md-2 col-sm-12 btn btn-block btn-primary rounded-pill mb-2" value="Buscar">
            <input name="__RequestVerificationToken" type="hidden">
            <a asp-action="Index">Todos los registros</a>
        </form>

    </div>
</div>

<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark text-center">
        <tr>

            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["Ordenmarca"]">      @Html.DisplayNameFor(model => model.marca)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-OrdenA="@ViewData["Ordenanio"]">     @Html.DisplayNameFor(model => model.anio)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proceso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="thead-dark text-center">
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.anio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.proceso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comentario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cliente.clienteID)
                </td>
                <td>
                    <a asp-action="Create" asp-route-id="@item.automovilID" class="btn btn-light btn-block">Seleccionar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
