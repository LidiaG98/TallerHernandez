@model TallerHernandez.Models.Recepcion

@{
    ViewData["Title"] = "Detalles";
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="col-11 modal-title text-center">Detalles de ficha de ingreso</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.diagnostico)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.diagnostico)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.fechaEntrada)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.fechaEntrada)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.fechaSalida)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.fechaSalida)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.cliente)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.cliente.nombre)
                    @Html.DisplayFor(model => model.cliente.apellido)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.empleado)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.empleado.nombre)
                    @Html.DisplayFor(model => model.empleado.apellido)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Automovil)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Automovil.automovilID)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.estado)
                </dt>
                @if (@Model.estado.Equals(1))
                {
                    <dd class="col-sm-8">
                        Asignado
                    </dd>
                }
                else
                {
                    <dd class="col-sm-8">
                        Sin Asignar
                    </dd>
                }
            </dl>
        </div>
        <div class="modal-footer">        
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.recepcionID">Editar</a>
                <button data-dismiss="modal" class="btn btn-secondary">Cancelar</button>            
        </div>
    </div>
</div>
