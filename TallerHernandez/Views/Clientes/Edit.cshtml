@model TallerHernandez.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<a asp-action="Index" class="btn btn-secondary">Regresar</a>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4 bg-white shadow" style="z-index:4;">

            <div class="text-center pt-4">
                <img class="rounded-circle" src="/uploads/@(Model.imagenN)" alt="usuario" width="200" height="200" id="file-preview-zone" />
            </div>
            <div class="caption text-center mb-4 mt-2">
                <label class="btn btn-primary btn-block" for="files">Subir Fotografía</label>
                <input asp-for="imagen.imageFile" accept="image/*" type="file" class="btn btn-info" id="files" hidden />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="clienteID" class="form-control" type="hidden" />
            </div>

        </div>
        <div class="col-md-8 bg-white">
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="imagenN" class="control-label"></label>
                <input asp-for="imagenN " class="form-control" />
                <span asp-validation-for="imagenN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apellido" class="control-label"></label>
                <input asp-for="apellido" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono" class="control-label"></label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="puntos" class="control-label"></label>
                <input asp-for="puntos" min="0" class="form-control" />
                <span asp-validation-for="puntos" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </div>

    </div>

</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
