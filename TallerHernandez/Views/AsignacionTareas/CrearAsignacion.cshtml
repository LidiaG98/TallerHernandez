@model IEnumerable<TallerHernandez.Models.Recepcion>

@{
    ViewData["Title"] = "CrearAsignacion";
}
<div class="row align">
    <div class="col-md-3 col-sm-12">
        <img src="/images/logoTaller.png" style="max-height: 90%; max-width:100%;">
    </div>
    <div class="col-md-9 col-sm-12 mb-5">
        <h1>Asignar nueva recepción</h1>
        <form asp-action="CrearAsignacion" method="get">
            <div class="form-actions no-color">
                <p>
                    Filtro: <input class="col-md-5" type="text" placeholder="Ingrese la placa del automóvil o nombre del recepcionista" name="cadena" value="@ViewData["Filtro"]" />
                    <input type="submit" value="Buscar" class="btn btn-secondary" />
                    <a asp-action="CrearAsignacion">Todos los registros</a>
                </p>
            </div>
        </form>
    </div>
</div>
<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.diagnostico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Automovil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.procedimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mantenimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ordenar Por:
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-action="CrearAsignacion" asp-route-OrdenAsig="@ViewData["OrdenAuto"]">      @Html.DisplayNameFor(model => model.automovilID)</a>
                        <a class="dropdown-item" asp-action="CrearAsignacion" asp-route-OrdenAsig="@ViewData["OrdenNom"]">     @Html.DisplayNameFor(model => model.empleado.nombre)</a>
                    </div>
                </div>
            </th>
        </tr>
    </thead>
    <tbody class="thead-dark text-center">
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.diagnostico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaSalida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.clienteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.empleado.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.automovilID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.procedimientoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mantenimientoID)
            </td>
            @if (item.estado.Equals(1))
            {
            <td>
                No Asignado

            </td>}
            else
            {
            <td>
                Asignado
            </td>}
            <td>
                <a class="btn btn-warning" asp-route-id="@item.recepcionID" asp-action="EmpleadoAsig" asp-controller="AsignacionTareas">Elegir</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div id="modalListadoEncargado" class="modal hide fade in" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Listado de empleados</h4>
                <button type="button" class="close" data-dismiss="modal" arial-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-responsive-sm">
                    <thead class="thead-dark text-center">
                        <tr>
                            <td>DUI</td>
                            <td>Nombre</td>
                            <td>Apellido</td>
                        </tr>
                    </thead>
                    <tbody class="thead-dark text-center">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
